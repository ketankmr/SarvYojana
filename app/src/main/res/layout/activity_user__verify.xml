<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/com_accountkit_vertical_spacer_large_height"
    android:paddingBottom="@dimen/com_accountkit_vertical_spacer_small_height"
    android:paddingLeft="@dimen/default_bmb_buttonHorizontalMargin"
    android:paddingRight="@dimen/default_bmb_buttonHorizontalMargin"
    tools:context="com.ketank619gmail.govschemes.User_Verify">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="40dp">

      <CheckBox
          android:id="@+id/children"
          android:layout_width="wrap_content"
          android:textSize="15sp"
          android:layout_marginLeft="30dp"
          android:scaleX="2"
          android:scaleY="2"
          android:layout_marginBottom="18dp"
          android:layout_height="wrap_content"
          android:text="children" />

      <CheckBox
          android:id="@+id/student"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:scaleX="2"
          android:layout_marginBottom="18dp"
          android:scaleY="2"
          android:textSize="15sp"
          android:text="student"
          />

      <CheckBox
          android:id="@+id/mother"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginBottom="18dp"
          android:scaleX="2"
          android:scaleY="2"
          android:textSize="15sp"
          android:text="mother"/>

      <CheckBox
          android:id="@+id/Entrepreneur"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="18dp"
          android:scaleX="2"
          android:layout_marginLeft="50dp"
          android:textSize="15sp"
          android:scaleY="2"
          android:text="Entrepreneur"/>

      <CheckBox
          android:id="@+id/farmer"
          android:layout_width="wrap_content"
          android:layout_marginLeft="30dp"
          android:scaleX="2"
          android:scaleY="2"
          android:textSize="15sp"
          android:layout_height="wrap_content"
          android:text="farmer"/>



  </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:background="@drawable/login_button_selector"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="sign"
       />

</RelativeLayout>
